pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'oussama75/semsar-aws-mate'  // Docker Hub repo
        DOCKER_TAG = "${BUILD_NUMBER}"              // Auto-tag with Jenkins build number
    }

    stages {

        // -----------------------------
        stage('Cloning Git') {
            steps {
                echo 'Cloning repository...'
                checkout scm
            }
        }

        // -----------------------------
        stage('Build Docker Image') {
            steps {
                echo "Building Docker image ${DOCKER_IMAGE}:${DOCKER_TAG}..."
                sh "docker build -t $DOCKER_IMAGE:$DOCKER_TAG ."
            }
        }

        // -----------------------------
        stage('Test Image') {
            steps {
                echo "Testing Docker image ${DOCKER_IMAGE}:${DOCKER_TAG}..."

                // Stop & remove previous test container if exists
                sh "docker stop test_container || true"
                sh "docker rm test_container || true"

                // Run container
                sh "docker run --rm -d --name test_container $DOCKER_IMAGE:$DOCKER_TAG"

                // Wait 5 seconds
                sh "sleep 5"

                // Stop test container
                sh "docker stop test_container || true"
            }
        }

        // -----------------------------
        stage('Publish Image') {
            steps {
                echo "Publishing Docker image ${DOCKER_IMAGE}:${DOCKER_TAG} to Docker Hub..."
                script {
                    withCredentials([usernamePassword(
                        credentialsId: 'docker-hub-token',
                        usernameVariable: 'DOCKER_USER',
                        passwordVariable: 'DOCKER_PASS'
                    )]) {
                        // Login
                        sh 'echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin'

                        // Push current tag
                        sh "docker push $DOCKER_IMAGE:$DOCKER_TAG"

                        // Push latest tag
                        sh "docker tag $DOCKER_IMAGE:$DOCKER_TAG $DOCKER_IMAGE:latest"
                        sh "docker push $DOCKER_IMAGE:latest"

                        // Logout
                        sh 'docker logout'
                    }
                }
            }
        }

        // -----------------------------
        stage('Deploy Image') {
            steps {
                echo "Deploying Docker image ${DOCKER_IMAGE}:${DOCKER_TAG}..."
                sh "docker stop deployed_container || true"
                sh "docker rm deployed_container || true"
                sh "docker run -d --name deployed_container -p 8080:80 $DOCKER_IMAGE:$DOCKER_TAG"
            }
        }
    }

    // -----------------------------
    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
        always {
            // Ensure Docker logout and cleanup
            sh "docker stop test_container || true"
            sh "docker rm test_container || true"
            sh "docker logout || true"
        }
    }
}
