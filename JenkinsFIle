pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'oussama75/semsar-aws-mate'
        DOCKER_TAG   = "${BUILD_NUMBER}"
    }

    stages {
        stage('Test Docker') {
    steps {
        sh 'docker info'   
             }
        }


        stage('Cloning Git') {
            steps {
                echo 'Cloning repository...'
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "Building Docker image ${DOCKER_IMAGE}:${DOCKER_TAG}..."
                script {
                    if (isUnix()) {
                        sh "docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} ."
                    } else {
                        bat "docker build -t %DOCKER_IMAGE%:%DOCKER_TAG% ."
                    }
                }
            }
        }

        stage('Test Image') {
            steps {
                echo "Testing Docker image ${DOCKER_IMAGE}:${DOCKER_TAG}..."
                script {
                    if (isUnix()) {
                        sh '''
                          docker stop test_container || true
                          docker rm test_container || true
                          docker run --rm -d --name test_container ${DOCKER_IMAGE}:${DOCKER_TAG}
                          sleep 5
                          docker stop test_container || true
                        '''
                    } else {
                        bat '''
                          docker stop test_container 2>NUL
                          docker rm test_container 2>NUL
                          docker run --rm -d --name test_container %DOCKER_IMAGE%:%DOCKER_TAG%
                          timeout /t 5
                          docker stop test_container 2>NUL
                        '''
                    }
                }
            }
        }

        stage('Publish Image') {
            steps {
                echo "Publishing Docker image to Docker Hub..."
                script {
                    withCredentials([
                        usernamePassword(
                            credentialsId: 'docker-hub-token',
                            usernameVariable: 'DOCKER_USER',
                            passwordVariable: 'DOCKER_PASS'
                        )
                    ]) {
                        if (isUnix()) {
                            sh '''
                              echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                              docker push ${DOCKER_IMAGE}:${DOCKER_TAG}
                              docker tag ${DOCKER_IMAGE}:${DOCKER_TAG} ${DOCKER_IMAGE}:latest
                              docker push ${DOCKER_IMAGE}:latest
                              docker logout
                            '''
                        } else {
                            bat '''
                              echo %DOCKER_PASS% | docker login -u %DOCKER_USER% --password-stdin
                              docker push %DOCKER_IMAGE%:%DOCKER_TAG%
                              docker tag %DOCKER_IMAGE%:%DOCKER_TAG% %DOCKER_IMAGE%:latest
                              docker push %DOCKER_IMAGE%:latest
                              docker logout
                            '''
                        }
                    }
                }
            }
        }

        stage('Deploy Image') {
            steps {
                echo "Deploying Docker image ${DOCKER_IMAGE}:${DOCKER_TAG}..."
                script {
                    if (isUnix()) {
                        sh '''
                          docker stop deployed_container || true
                          docker rm deployed_container || true
                          docker run -d --name deployed_container -p 5000:80 ${DOCKER_IMAGE}:${DOCKER_TAG}
                        '''
                    } else {
                        bat '''
                          docker stop deployed_container 2>NUL
                          docker rm deployed_container 2>NUL
                          docker run -d --name deployed_container -p 5001:80 %DOCKER_IMAGE%:%DOCKER_TAG%
                        '''
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
        always {
            script {
                if (isUnix()) {
                    sh '''
                      docker stop test_container || true
                      docker rm test_container || true
                      docker logout || true
                    '''
                } else {
                    bat '''
                      docker stop test_container 2>NUL
                      docker rm test_container 2>NUL
                      docker logout
                    '''
                }
            }
        }
    }
}
