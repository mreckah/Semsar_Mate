pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'oussama75/semsar-aws-mate'
        DOCKER_TAG = "${BUILD_NUMBER}"
    }

    stages {
        stage('Cloning Git') {
            steps {
                echo 'Cloning repository...'
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "Building Docker image ${DOCKER_IMAGE}:${DOCKER_TAG}..."
                sh "docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} ."
            }
        }

        stage('Test Image') {
            steps {
                echo "Testing Docker image ${DOCKER_IMAGE}:${DOCKER_TAG}..."
                sh """
                    docker stop test_container || true
                    docker rm test_container || true
                    docker run --rm -d --name test_container ${DOCKER_IMAGE}:${DOCKER_TAG}
                    sleep 5
                    docker stop test_container || true
                """
            }
        }

        stage('Publish Image') {
            steps {
                echo "Publishing Docker image ${DOCKER_IMAGE}:${DOCKER_TAG} to Docker Hub..."
                withCredentials([usernamePassword(credentialsId: 'docker-hub-token',
                                                  usernameVariable: 'DOCKER_USER',
                                                  passwordVariable: 'DOCKER_PASS')]) {
                    sh """
                        echo \$DOCKER_PASS | docker login -u \$DOCKER_USER --password-stdin
                        docker push ${DOCKER_IMAGE}:${DOCKER_TAG}
                        docker tag ${DOCKER_IMAGE}:${DOCKER_TAG} ${DOCKER_IMAGE}:latest
                        docker push ${DOCKER_IMAGE}:latest
                        docker logout
                    """
                }
            }
        }

        stage('Deploy Image') {
            steps {
                echo "Deploying Docker image ${DOCKER_IMAGE}:${DOCKER_TAG}..."
                sh """
                    docker stop deployed_container || true
                    docker rm deployed_container || true
                    docker run -d --name deployed_container -p 8080:80 ${DOCKER_IMAGE}:${DOCKER_TAG}
                """
            }
        }
    }

    post {
        success { echo 'Pipeline completed successfully!' }
        failure { echo 'Pipeline failed!' }
        always {
            sh """
                docker stop test_container || true
                docker rm test_container || true
                docker logout || true
            """
        }
    }
}
